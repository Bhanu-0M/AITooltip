        "declarativeNetRequest",
        "scripting",
        "storage",
        "tabs",
        "unlimitedStorage"
    ],
    "optional_permissions": [
        "downloads",
        "history"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "declarative_net_request" : {
        "rule_resources" : [{
            "id": "ruleset",
            "enabled": true,
            "path": "ruleset.json"
        }]
